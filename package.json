{
  "publisher": "hyoban",
  "name": "tailwindcss-classname-highlight",
  "displayName": "Tailwind CSS ClassName Highlight",
  "type": "commonjs",
  "version": "0.6.2",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "description": "",
  "author": "Stephen Zhou <hi@hyoban.cc>",
  "license": "MIT",
  "homepage": "https://github.com/hyoban/tailwindcss-classname-highlight#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyoban/tailwindcss-classname-highlight"
  },
  "bugs": {
    "url": "https://github.com/hyoban/tailwindcss-classname-highlight/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tailwindcss-classname-highlight.reload",
        "title": "Tailwind CSS ClassName Highlight: Reload"
      }
    ],
    "hoverProvider": "true",
    "configuration": {
      "title": "Tailwind CSS ClassName Highlight",
      "properties": {
        "tailwindcss-classname-highlight.enableHoverProvider": {
          "type": "boolean",
          "default": false,
          "title": "Enable Hover Provider",
          "description": "You may need to disable Hovers provided by Tailwind CSS IntelliSense."
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "pnpm build --watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "pack": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc",
    "vscode:prepublish": "pnpm build"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.7",
    "@types/node": "^20.14.8",
    "@types/vscode": "1.84.0",
    "@vscode/vsce": "^2.29.0",
    "eslint": "^9.5.0",
    "eslint-config-hyoban": "3.0.0-beta.24",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.1",
    "jiti": "^1.21.6",
    "local-pkg": "^0.5.0",
    "micromatch": "^4.0.7",
    "reactive-vscode": "0.2.0-beta.3",
    "sucrase": "^3.35.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}
